<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Launch RViz2 for visualization -->
  <node pkg="rviz2" exec="rviz2" name="rviz2" output="screen">
    <param name="use_sim_time" value="true"/>
  </node>

  <!-- Simple passthrough filter just to copy data -->
  <node pkg="topic_tools" exec="relay" name="pointcloud_relay" output="screen" 
        args="/sensor/lidar/top/points /processed_pointcloud">
  </node>
</launch>