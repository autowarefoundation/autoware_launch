<launch>
  <!-- AD API options -->
  <arg name="launch_default_adapi" default="true"/>
  <arg name="launch_rviz_adaptors" default="true"/>

  <!-- Evaluation options -->
  <arg name="launch_evaluation_adapter" default="false"/>

  <!-- Parameter files -->
  <arg name="default_adapi_param_path" default="$(find-pkg-share autoware_default_adapi_universe)/config/default_adapi.param.yaml"/>

  <!-- AD API -->
  <group if="$(var launch_default_adapi)">
    <include file="$(find-pkg-share autoware_default_adapi_universe)/launch/default_adapi.launch.py">
      <arg name="config" value="$(var default_adapi_param_path)"/>
    </include>
  </group>

  <!-- AD API for RViz -->
  <group if="$(var launch_rviz_adaptors)">
    <include file="$(find-pkg-share autoware_adapi_adaptors)/launch/rviz_adaptors.launch.xml"/>
  </group>

  <!-- Evaluation adapter -->
  <group if="$(var launch_evaluation_adapter)">
    <include file="$(find-pkg-share autoware_evaluation_adapter)/launch/evaluation_adapter.launch.xml"/>
  </group>
</launch>
